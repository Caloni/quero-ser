#include <iostream>
#include <string>

using namespace std;
int main()
{
    string frase, comparador = "abdeopqADOPQR", comparador2 = "Bg";
    getline(cin, frase);

    int contador = 0;
    for(int i = 0; i < frase.size(); i++)
    {
        for(int j = 0; j < comparador.size(); j++)
        {
            if(frase.at(i) == comparador.at(j))
            {
                contador++;
            }
        }
        for(int j = 0; j < comparador2.size(); j++)
        {
            if(frase.at(i) == comparador2.at(j))
            {
                contador+=2;
            }
        }
    }
    cout << contador;
}

