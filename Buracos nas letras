#include <iostream>
#include <string>

using namespace std;
int main()
{
    string frase, comparador = "abdegopqADOPQR";
    char BE = 'B';
    getline(cin, frase);

    int contador = 0;
    for(int i = 0; i < frase.size(); i++)
    {
        if(frase.at(i) == BE)
        {
            contador += 2;
        }
        else
        {
        for(int j = 0; j < comparador.size(); j++)
        {
            if(frase.at(i) == comparador.at(j))
            {
                contador++;
            }
        }
        }
    }
    cout << contador;
}
